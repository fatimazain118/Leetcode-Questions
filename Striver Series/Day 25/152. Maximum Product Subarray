class Solution {
public:
    int maxProduct(vector<int>& nums) {
        int maxp = INT_MIN, prod = 1;
        
        for(int i=0; i<nums.size()-1; i++){
            prod *= nums[i];
            maxp = max(prod, maxp);
            if(prod == 0){
                prod = 1;
            }
        }
        
        prod = 1;
        
        for(int i=nums.size()-1; i>=0; i--){
            prod *= nums[i];
            maxp = max(prod, maxp);
            if(prod == 0){
                prod = 1;
            }
        }
        return maxp;
    }
};
